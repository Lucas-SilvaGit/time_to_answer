<div>
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>              <h1>Registration Form</h1>
          <div>
            <%= f.email_field :email, autofocus: true, placeholder:"Email", class:"form-control" %>
          </div>

          <div>
            <%= f.password_field :password, placeholder:"Password", class:"form-control" %>
          </div>

          <div>
            <%= f.password_field :password_confirmation, placeholder:"Password Confirmation", class:"form-control" %>
          </div>

          <div>
            <%= f.submit "Sign-in", class:"btn btn-primary submit" %>
          </div>

          <div class="clearfix">
          </div>
            <%= render "users/shared/error_messages", resource: resource %>
          <div class="separator">
          </div>
        <% end %>
      </section>
    </div>
  </div>
</div>
